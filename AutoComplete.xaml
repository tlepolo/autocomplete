    <Grid>
        <TextBox x:Name="txt" InputMethod.IsInputMethodEnabled="False" CharacterCasing="Upper" Height="50" FontSize="20" KeyUp="txt_KeyUp" KeyDown="txt_KeyDown"/>
        <Button  HorizontalAlignment="Right" Height="{Binding ElementName=txt,Path=ActualHeight}" Name="btn" FocusVisualStyle="{x:Null}">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Padding="14" Background="Transparent" Name="border">
                        <Path Fill="{StaticResource PrimaryBrush}" Name="path"
                              Data="{StaticResource search}"  Stretch="Uniform"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Padding" Value="12"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <local:CusPopup AllowsTransparency="True" x:Name="pop" PopupAnimation="Slide"
               PlacementTarget="{Binding ElementName=txt}" Placement="Bottom">
            <Border CornerRadius="8" Background="#FFFFFF" Padding="1"
                    Width="{Binding ElementName=txt,Path=ActualWidth}"
                    MaxHeight="198" Effect="{x:Null}" >
                <ContentControl x:Name="cc">
                    <ContentControl.ContentTemplateSelector>
                        <local:MyDataTemplateSelector>
                            <local:MyDataTemplateSelector.NoData>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <Border Padding="20">
                                            <Path Fill="Gray" Data="{StaticResource nodata}" Stretch="Uniform" Height="50"/>
                                        </Border>
                                        <TextBlock Text="暂无数据" FontSize="16"  Margin="0,-10,0,10"
                                                   Foreground="Gray" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </local:MyDataTemplateSelector.NoData>
                            <local:MyDataTemplateSelector.HasData>
                                <DataTemplate>
                                    <ListBox ItemsSource="{Binding}" Name="lst" >
                                        <ListBox.ItemContainerStyle>
                                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                                                <Setter Property="FontSize" Value="18"/>
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <EventSetter Event="PreviewMouseLeftButtonDown" Handler="ListBoxItem_PreviewMouseLeftButtonDown"/>
                                                <EventSetter Event="PreviewKeyDown" Handler="ListBoxItem_PreviewKeyDown"/>
                                            </Style>
                                        </ListBox.ItemContainerStyle>
                                    </ListBox>
                                </DataTemplate>
                            </local:MyDataTemplateSelector.HasData>
                        </local:MyDataTemplateSelector>
                    </ContentControl.ContentTemplateSelector>
                </ContentControl>

            </Border>
        </local:CusPopup>
    </Grid>
</UserControl>
